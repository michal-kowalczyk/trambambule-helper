<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pl.ekk.mkk.djinnidemo.MainActivity"
    android:background="@color/common_action_bar_splitter">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/decrementTotalPointsButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/incrementTotalPointsButton"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/decrementTotalPointsButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/totalPointsTextView"
        android:layout_alignBottom="@+id/incrementTotalPointsButton"
        android:layout_toEndOf="@+id/incrementTotalPointsButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:id="@+id/resetButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <FrameLayout
        android:id="@+id/pointsView"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_below="@+id/decrementTotalPointsButton"
        android:layout_centerHorizontal="true"
        android:background="@android:color/white"></FrameLayout>

</RelativeLayout>
